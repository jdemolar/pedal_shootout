# Maven Wrapper script for Unix/macOS
# This script downloads Maven if it's not already cached, then runs it.

set -e

# Determine the directory of this script
if [ -z "$MAVEN_PROJECTBASEDIR" ]; then
  MAVEN_PROJECTBASEDIR=$(cd "$(dirname "$0")" && pwd)
  export MAVEN_PROJECTBASEDIR
fi

WRAPPER_PROPERTIES="$MAVEN_PROJECTBASEDIR/.mvn/wrapper/maven-wrapper.properties"
WRAPPER_JAR="$MAVEN_PROJECTBASEDIR/.mvn/wrapper/maven-wrapper.jar"

# Read distribution URL from properties
if [ -f "$WRAPPER_PROPERTIES" ]; then
  DIST_URL=$(grep 'distributionUrl' "$WRAPPER_PROPERTIES" | cut -d'=' -f2- | tr -d '\r')
  WRAPPER_URL=$(grep 'wrapperUrl' "$WRAPPER_PROPERTIES" | cut -d'=' -f2- | tr -d '\r')
fi

# Default Maven version
: "${DIST_URL:=https://repo.maven.apache.org/maven2/org/apache/maven/apache-maven/3.9.9/apache-maven-3.9.9-bin.zip}"

# Maven user home
: "${MAVEN_USER_HOME:=$HOME/.m2}"
DIST_NAME=$(basename "$DIST_URL" .zip)
MAVEN_HOME="$MAVEN_USER_HOME/wrapper/dists/$DIST_NAME"

# Download and extract Maven if not present
if [ ! -d "$MAVEN_HOME" ]; then
  echo "Downloading Maven from $DIST_URL..."
  mkdir -p "$MAVEN_HOME"
  TMPFILE=$(mktemp /tmp/maven-wrapper-XXXXXX.zip)
  if command -v curl > /dev/null 2>&1; then
    curl -fsSL -o "$TMPFILE" "$DIST_URL"
  elif command -v wget > /dev/null 2>&1; then
    wget -q -O "$TMPFILE" "$DIST_URL"
  else
    echo "Error: Neither curl nor wget found. Cannot download Maven." >&2
    exit 1
  fi
  unzip -q -o "$TMPFILE" -d "$MAVEN_HOME"
  rm -f "$TMPFILE"
fi

# Find the mvn executable inside the extracted directory
MVN_CMD=$(find "$MAVEN_HOME" -name 'mvn' -path '*/bin/mvn' -type f | head -1)
if [ -z "$MVN_CMD" ]; then
  echo "Error: Could not find mvn executable in $MAVEN_HOME" >&2
  exit 1
fi

chmod +x "$MVN_CMD"
exec "$MVN_CMD" "$@"
